STATMENTS

a = "Hello World!"
alert(a)

a = "Hello World!" ; ;alert(a);

a = "Hello World!";
alert(a);

BLOCKS

{
	// this is a block containing 2 statements
	var a = "Hello!";
	alert(a);
}

